/* pages/detail-song/cpns/song-header/song-header.wxss */
.header {
  width: 100vw;
  position: relative;
  left: -20rpx;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  color: #fff;
}

.header .bg-image {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.header .bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(5px);
}

.content {
  display: flex;
  margin-top: 60rpx;
  padding: 0 50rpx;
  justify-content: space-between;
}

.content .image {
  width: 220rpx !important;
  height: 220rpx !important;
  border-radius: 10rpx;
}

.content .info {
  display: flex;
  position: relative;
  width: 350rpx;
  height: 220rpx;
  font-size: 32rpx;
  flex-direction: column;
  justify-content: space-between;
}

.content .info .author {
  display: flex;
  position: relative;
  bottom: 80rpx;
  align-items: center;
}

.content .info .author .nickname {
  font-size: 26rpx;
  margin-left: 10rpx;
}

.content .info .author .avatar {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
}

.content .info .desc {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.header .operation {
  display: flex;
  margin-top: 46rpx;
  justify-content: space-around;
}

.header .operation .item {
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
}

.header .operation .item .icon {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  line-height: 50rpx;
}

.header .operation .item .text {
  line-height: 50rpx;
  margin-left: 8rpx;
}